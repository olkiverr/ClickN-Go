
<header class="header">
    <div class="header-container">
        <!-- Logo -->
        <a href="/" class="logo">
            <div class="logo-icon">
                <img src="/img/logo.png" alt="ClickN'Go Logo" style="height: 36px;">
            </div>
            ClickN'Go
        </a>

        <!-- Search Bar -->
        <div class="search-container">
            <form action="/products" method="GET" style="display: flex; width: 100%;">
                <div style="display: flex; flex-grow: 1; position: relative;">
                    <div class="search-icon">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"/>
                            <path d="M21 21l-4.35-4.35"/>
                        </svg>
                    </div>
                    <input type="search" name="q" class="search-bar" placeholder="Search GPU, CPU, Windows licenses..." value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                </div>
                
                <details class="filter-dropdown">
                    <summary class="action-btn" style="margin-left: 0.5rem; height: 46px; width: 46px; display: flex; align-items: center; justify-content: center;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 3H2l8 9.46V21l4-2v-7.54L22 3z"/>
                        </svg>
                    </summary>
                    <div class="dropdown-content">
                        <select name="tag" class="search-bar" style="margin-bottom: 0.5rem;">
                            <option value="">All Categories</option>
                            <option value="CPU" <%= typeof selectedTag !== 'undefined' && selectedTag === 'CPU' ? 'selected' : '' %>>CPU</option>
                            <option value="GPU" <%= typeof selectedTag !== 'undefined' && selectedTag === 'GPU' ? 'selected' : '' %>>GPU</option>
                            <option value="RAM" <%= typeof selectedTag !== 'undefined' && selectedTag === 'RAM' ? 'selected' : '' %>>RAM</option>
                            <option value="SSD" <%= typeof selectedTag !== 'undefined' && selectedTag === 'SSD' ? 'selected' : '' %>>SSD</option>
                            <option value="Software" <%= typeof selectedTag !== 'undefined' && selectedTag === 'Software' ? 'selected' : '' %>>Software</option>
                        </select>
                        <input type="number" name="minPrice" placeholder="Min Price" value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>" class="search-bar" style="margin-bottom: 0.5rem;">
                        <input type="number" name="maxPrice" placeholder="Max Price" value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>" class="search-bar">
                        <button type="submit" class="btn-primary" style="width: 100%; margin-top: 1rem;">Apply Filters</button>
                    </div>
                </details>
                <button type="submit" class="action-btn" style="margin-left: 0.5rem; height: 46px; width: 46px; display: flex; align-items: center; justify-content: center;">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/>
                        <path d="M21 21l-4.35-4.35"/>
                    </svg>
                </button>
            </form>
        </div>

        <!-- Header Actions -->
        <div class="header-actions">
            <button class="action-btn" id="themeToggle" title="Toggle theme">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="5"/>
                    <line x1="12" y1="1" x2="12" y2="3"/>
                    <line x1="12" y1="21" x2="12" y2="23"/>
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                    <line x1="1" y1="12" x2="3" y2="12"/>
                    <line x1="21" y1="12" x2="23" y2="12"/>
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                </svg>
            </button>

            <a href="/cart" class="action-btn" title="Cart">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="9" cy="21" r="1"/>
                    <circle cx="20" cy="21" r="1"/>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                </svg>
                <% const cartItemCount = session.cart ? session.cart.reduce((sum, item) => sum + item.quantity, 0) : 0; %>
                <% if (cartItemCount > 0) { %>
                    <span class="cart-badge" id="cartCount"><%= cartItemCount %></span>
                <% } %>
            </a>

            <% if (session && session.userId) { %>
                <% if (session.role === 'admin') { %>
                    <a href="/admin/dashboard" class="action-btn" title="Admin Panel">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                        </svg>
                    </a>
                <% } %>
                <a href="/account" class="action-btn" title="My account">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                        <circle cx="12" cy="7" r="4"/>
                    </svg>
                </a>
                <a href="/logout" class="action-btn" title="Logout">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                        <polyline points="16 17 21 12 16 7"/>
                        <line x1="21" y1="12" x2="9" y2="12"/>
                    </svg>
                </a>
            <% } else { %>
                <a href="/login" class="action-btn" title="Login">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/>
                        <polyline points="10 17 15 12 10 7"/>
                        <line x1="15" y1="12" x2="3" y2="12"/>
                    </svg>
                </a>
            <% } %>
        </div>
    </div>
</header>

<!-- Navigation Tabs -->
<nav class="nav-tabs">
    <div class="nav-container">
        <a href="/" class="nav-tab <%= currentPath === '/' ? 'active' : '' %>">Home</a>
        <a href="/products" class="nav-tab <%= currentPath === '/products' ? 'active' : '' %>">Products</a>
        <!-- Add more categories here -->
        <a href="#" class="nav-tab">Processors</a>
        <a href="#" class="nav-tab">Graphics Cards</a>
        <a href="#" class="nav-tab">RAM Memory</a>
        <a href="#" class="nav-tab">Storage</a>
        <a href="#" class="nav-tab">Windows Licenses</a>
        <a href="#" class="nav-tab">Auctions</a>
    </div>
</nav>
