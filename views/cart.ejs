
<main class="section-container">
    <h2 class="section-title">Your Shopping Cart</h2>
    <% if (items.length === 0) { %>
        <p>Your cart is empty.</p>
    <% } else { %>
                    <div class="products-grid" style="grid-template-columns: 1fr;">
                        <% items.forEach(item => { %>
                            <div class="product-card cart-product-card">
                                <img src="<%= item.product.image_url %>" alt="<%= item.product.name %>" class="cart-product-image">
                                <div class="product-info cart-product-info">
                                    <h3 class="product-title"><%= item.product.name %></h3>
                                    <p>Quantity: <%= item.quantity %></p>
                                    <p>Unit Price: $<%= item.product.price %></p>
                                </div>
                                <div class="cart-item-actions">
                                    <p class="price-current">Total: $<%= item.itemTotal.toFixed(2) %></p>
                                    <a href="/cart/remove/<%= item.productId %>" class="btn-secondary cart-remove-btn">Remove</a>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    <div class="cart-summary">
                        <div class="cart-total">
                            <strong>Subtotal: $<%= totalPrice.toFixed(2) %></strong>
                        </div>
        
                        <% if (promo) { %>
                            <div class="cart-discount">
                                <strong>Discount (<%= promo.code %>): -$<%= discountAmount.toFixed(2) %></strong>
                            </div>
                        <% } %>
        
                        <div class="cart-final-price">
                            <strong>Total: $<%= finalPrice.toFixed(2) %></strong>
                        </div>
                    </div>
        
                    <div class="promo-section">
                        <form action="/cart/apply-promo" method="POST">
                            <input type="text" name="promoCode" placeholder="Enter Promo Code" class="promo-section-input">
                            <button type="submit" class="btn-secondary">Apply</button>
                        </form>
                        <% if (promoError) { %>
                            <p class="error-message"><%= promoError %></p>
                        <% } %>
                        <% if (promoSuccess) { %>
                            <p class="success-message"><%= promoSuccess %></p>
                        <% } %>
                    </div>
        
                    <div class="checkout-button-container">
                        <a href="/cart/checkout" class="btn-primary checkout-button">Proceed to Checkout</a>
                    </div>    <% } %>
</main>
