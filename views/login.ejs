
<main class="section-container">
    <h2 class="section-title">Log in to your account</h2>
    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="error-message"><%= errorMessage %></div>
    <% } %>
    <form action="/login" method="POST" class="auth-form">
        <label for="loginIdentifier">Email or Username</label>
        <input type="text" id="loginIdentifier" name="loginIdentifier" required>

        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>

        <button type="submit" class="btn-primary">Log In</button>
        <p style="text-align: center; margin-top: 1rem; color: var(--text-secondary);">If you don't have an account, please <a href="/register" style="color: var(--accent-color); text-decoration: none;">register</a>.</p>
    </form>
</main>
