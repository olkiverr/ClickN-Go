
<main class="section-container">
    <h2 class="section-title">Create a new listing</h2>
    <form action="/marketplace" method="POST" class="auth-form">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" required>

                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="4" class="marketplace-new-listing-textarea"></textarea>
        
                    <label for="image_url">Image URL</label>
                    <input type="text" id="image_url" name="image_url">
        
                    <label for="price_type">Price Type</label>
                    <select id="price_type" name="price_type" class="search-bar marketplace-new-listing-select">
                        <option value="fixed">Fixed Price</option>
                        <option value="negotiable">Negotiable</option>
                        <option value="bid">Bidding</option>
                    </select>
        <label for="price">Price (or starting bid)</label>
        <input type="number" id="price" name="price" step="0.01" required>

                    <label for="delivery_type">Delivery</label>
                    <select id="delivery_type" name="delivery_type" class="search-bar marketplace-new-listing-select">            <option value="shipping">Shipping</option>
            <option value="pickup">Local Pickup</option>
        </select>

        <label for="delivery_fee">Delivery Fee (if applicable)</label>
        <input type="number" id="delivery_fee" name="delivery_fee" step="0.01">

        <button type="submit" class="btn-primary">Create Listing</button>
    </form>
</main>
