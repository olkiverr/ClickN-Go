
<main class="section-container order-success-container">
    <h2 class="section-title section-title-success">Order Placed Successfully!</h2>
    <p class="section-subtitle">Thank you for your purchase. Your order details are below.</p>

    <div class="order-details-card">
        <h3>Order #<%= order.id %></h3>
        <p><strong>Total Price:</strong> $<%= parseFloat(order.total_price).toFixed(2) %></p>
        <p><strong>Shipping Address:</strong> <%= order.shipping_address %>, <%= order.shipping_city %>, <%= order.shipping_zip %>, <%= order.shipping_country %></p>
        <p><strong>Tracking Number:</strong> <%= order.tracking_number %></p>
        <p><strong>Shipping Status:</strong> <%= order.shipping_status %></p>
        <p><strong>Order Date:</strong> <%= new Date(order.created_at).toLocaleDateString() %></p>

        <h3>Items in your order:</h3>
        <div class="order-items-grid">
            <% orderItems.forEach(item => { %>
                <div class="order-item">
                    <img src="<%= item.image_url || '/img/placeholder.jpg' %>" alt="<%= item.name %>">
                    <div class="order-item-info">
                        <h4><%= item.name %></h4>
                        <p>Quantity: <%= item.quantity %></p>
                        <p>Price: $<%= parseFloat(item.price).toFixed(2) %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="order-actions-container">
        <a href="/products" class="btn-primary">Continue Shopping</a>
        <a href="/account" class="btn-secondary">View My Orders</a> <!-- To be implemented later -->
    </div>
</main>
