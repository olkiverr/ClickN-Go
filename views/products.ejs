
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - ClickN'Go</title>
    <link rel="icon" href="/img/logo.png" type="image/png">
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body data-theme="dark">
    <%- include('partials/header') %>

    <section class="products-section">
        <div class="section-container">
            <div class="section-header">
                <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                    <h2 class="section-title">Search Results for "<%= searchQuery %>"</h2>
                <% } else { %>
                    <h2 class="section-title">All Our Products</h2>
                <% } %>
                <p class="section-subtitle">Discover our selection of hardware and software</p>
            </div>

            <div class="filter-bar" style="margin-bottom: 2rem; padding: 1rem; background: var(--secondary-bg); border-radius: 8px; display: flex; gap: 1rem; flex-wrap: wrap; justify-content: center;">
                <form action="/products" method="GET" style="display: flex; gap: 1rem; flex-wrap: wrap; margin: 0; padding: 0; border: none; background: none; box-shadow: none;">
                    <input type="text" name="q" placeholder="Search by name/description" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>" class="search-bar" style="flex: 1; min-width: 200px;">
                    
                    <select name="tag" class="search-bar" style="flex: 1; min-width: 150px;">
                        <option value="">All Categories</option>
                        <option value="CPU" <%= typeof selectedTag !== 'undefined' && selectedTag === 'CPU' ? 'selected' : '' %>>CPU</option>
                        <option value="GPU" <%= typeof selectedTag !== 'undefined' && selectedTag === 'GPU' ? 'selected' : '' %>>GPU</option>
                        <option value="RAM" <%= typeof selectedTag !== 'undefined' && selectedTag === 'RAM' ? 'selected' : '' %>>RAM</option>
                        <option value="SSD" <%= typeof selectedTag !== 'undefined' && selectedTag === 'SSD' ? 'selected' : '' %>>SSD</option>
                        <option value="Software" <%= typeof selectedTag !== 'undefined' && selectedTag === 'Software' ? 'selected' : '' %>>Software</option>
                    </select>

                    <input type="number" name="minPrice" placeholder="Min Price" value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>" class="search-bar" style="flex: 1; min-width: 100px;">
                    <input type="number" name="maxPrice" placeholder="Max Price" value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>" class="search-bar" style="flex: 1; min-width: 100px;">
                    
                    <button type="submit" class="btn-primary" style="flex: 0 0 auto;">Filter</button>
                </form>
            </div>

            <div class="products-grid">
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <a href="/products/<%= product.id %>">
                            <div class="product-image">
                                <img src="<%= product.image_url || '/img/placeholder.jpg' %>" alt="<%= product.name %>">
                            </div>
                            <div class="product-info">
                                <div class="product-category">PC Component</div>
                                <h3 class="product-title"><%= product.name %></h3>
                                <div class="product-specs">
                                    <% if (product.tags) { %>
                                        <% product.tags.split(',').forEach(tag => { %>
                                            <span class="spec-tag"><%= tag.trim() %></span>
                                        <% }) %>
                                    <% } %>
                                </div>
                                <div class="product-price-section">
                                    <div class="product-price">
                                        <span class="price-current">$<%= product.price %></span>
                                    </div>
                                </div>
                                <div class="product-actions">
                                    <form action="/cart/add/<%= product.id %>" method="POST" style="display: flex; width: 100%;">
                                        <input type="hidden" name="quantity" value="1">
                                        <button type="submit" class="btn-add-cart">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <circle cx="9" cy="21" r="1"/>
                                                <circle cx="20" cy="21" r="1"/>
                                                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                                            </svg>
                                            Add to Cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <script src="/js/main.js"></script>
</body>
</html>
