<div class="section-container">
    <h1 class="section-title">Site Settings</h1>

            <form action="/admin/settings" method="POST" class="auth-form admin-settings-form">
                <h2>Promotional Banner</h2>
                <div class="form-group">
                    <label for="promo_banner_text">Banner Text</label>
                    <input type="text" id="promo_banner_text" name="promo_banner_text" value="<%= settings.promo_banner_text || '' %>" class="search-bar promo-banner-input">
                </div>
                <div class="promo-banner-checkbox-wrapper">
                    <input type="checkbox" id="promo_banner_active" name="promo_banner_active" <%= settings.promo_banner_active === 'true' ? 'checked' : '' %> class="promo-banner-checkbox">
                    <label for="promo_banner_active">Enable Banner</label>
                </div>        <button type="submit" class="btn-primary">Save Settings</button>
    </form>
</div>
