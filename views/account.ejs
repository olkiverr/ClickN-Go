
<main class="section-container">
    <h2 class="section-title">My Account</h2>
    <% if (session && session.userId) { %>
                    <div class="feature-card account-info-card">
                        <h3 class="feature-title">Account Information</h3>
                        <p><strong>Username:</strong> <%= session.username %></p>
                        <p><strong>Email:</strong> <%= session.email %></p>
                        <p><strong>Role:</strong> <%= session.role %></p>
                        <div class="account-actions">
                            <a href="/account/orders" class="btn-secondary">View Order History</a>
                            <a href="/account/edit" class="btn-primary">Edit Account</a>
                        </div>
                    </div>    <% } else { %>
        <p>You are not logged in. <a href="/login">Login here</a>.</p>
    <% } %>
</main>
